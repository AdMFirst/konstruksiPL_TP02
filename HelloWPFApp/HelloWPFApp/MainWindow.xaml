<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="MyButton" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Click="Button_Click"/>
        <Label x:Name="OutputLabel" Content="Label" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Center" Margin="0,151,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="220"/>

    </Grid>
</Window>
